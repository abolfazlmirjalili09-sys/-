add_action( 'admin_post_etj_save_settings', 'etj_handle_save_settings' );
function etj_handle_save_settings() {
    if ( ! current_user_can( 'manage_options' ) ) wp_die( 'Ø¯Ø³ØªØ±Ø³ÛŒ Ù†Ø¯Ø§Ø±ÛŒØ¯.' );
    if ( empty( $_POST['etj_settings_nonce'] ) || ! wp_verify_nonce( $_POST['etj_settings_nonce'], 'etj_save_settings_action' ) ) wp_die( 'Ø¯Ø±Ø®ÙˆØ§Ø³Øª Ù…Ø¹ØªØ¨Ø± Ù†ÛŒØ³Øª.' );

    $email = isset( $_POST['etj_recipient_email'] ) ? sanitize_email( $_POST['etj_recipient_email'] ) : '';

    if (!is_email($email) && !empty($email)) {
        $redirect_url = admin_url( 'admin.php?page=etj-converter' );
        wp_redirect( $redirect_url . '&message=invalid_email' ); 
        exit;
    }

    update_option( ETJ_EMAIL_RECIPIENT_KEY, $email, 'no' ); 
    
    $redirect_url = admin_url( 'admin.php?page=etj-converter' );
    wp_redirect( $redirect_url . '&message=settings_saved' );
    exit;
}

