                        setTimeout(closeModal, 6000); 
                    } else {
                        modalMessage.innerHTML = '<span style=\"color: #d93025;\">âŒ ' + result.data + '</span>';
                    }
                })
                .catch(error => {
                    purchaseSubmitBtn.disabled = false;
                    modalMessage.innerHTML = '<span style=\"color: #d93025;\">âŒ Ø®Ø·Ø§ÛŒ Ø´Ø¨Ú©Ù‡: Ø¯Ø±Ø®ÙˆØ§Ø³Øª Ø§Ø±Ø³Ø§Ù„ Ù†Ø´Ø¯.</span>';
