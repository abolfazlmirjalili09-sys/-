// --- Û´. Ù…Ø¯ÛŒØ±ÛŒØª Ø¯Ø±Ø®ÙˆØ§Ø³Øª Ø§Ø³ØªØ¹Ù„Ø§Ù… Ø¨Ø§ Ø§Ø³ØªÙØ§Ø¯Ù‡ Ø§Ø² AJAX (Ø¨Ø¯ÙˆÙ† ØªØºÛŒÛŒØ±) ---
add_action( 'wp_ajax_etj_inquiry', 'etj_handle_ajax_inquiry' );
add_action( 'wp_ajax_nopriv_etj_inquiry', 'etj_handle_ajax_inquiry' );

function etj_handle_ajax_inquiry() {
	if ( ! isset( $_POST['nonce'] ) || ! wp_verify_nonce( $_POST['nonce'], 'etj-inquiry-nonce' ) ) {
        wp_send_json_error( 'Nonce Ù…Ø¹ØªØ¨Ø± Ù†ÛŒØ³Øª.' );
        wp_die();
    }
    
    // Ø´Ø¨ÛŒÙ‡â€ŒØ³Ø§Ø²ÛŒ Ù…Ù†Ø·Ù‚ Ø¬Ø³ØªØ¬Ùˆ
    $stored_data = get_option( ETJ_DATA_OPTION_KEY );
    $results = $stored_data ? $stored_data : [];

    if (!empty($results)) {
        wp_send_json_success( [ 'status' => 'available', 'results' => $results ] );
    } else {
        wp_send_json_success( [ 'status' => 'not_available', 'suggestion' => null ] );
    }
    wp_die();
}

