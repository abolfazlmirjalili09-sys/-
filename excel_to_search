            const productNameDisplay = document.getElementById('etj-modal-product-name');
            const productDataInput = document.getElementById('etj-modal-product-data');
            const purchaseSubmitBtn = document.getElementById('etj-purchase-submit-btn');
            const modalMessage = document.getElementById('etj-modal-message');

            if (!inquiryForm) return;

            // Function to open the modal
            function openModal(name, productData) {
                // Reset form and messages
                purchaseForm.reset();
                modalMessage.innerHTML = '';
                purchaseSubmitBtn.disabled = false;
                
                // Set product data
                productNameDisplay.textContent = name;
                productDataInput.value = JSON.stringify(productData);

                modal.style.display = 'flex';
                document.body.style.overflow = 'hidden'; 
            }

            // Function to close the modal
            function closeModal() {
                modal.style.display = 'none';
                document.body.style.overflow = ''; 
            }

            // Close listeners
            closeButton.addEventListener('click', closeModal);

            // Close on outside click
            window.addEventListener('click', function(event) {
                if (event.target === modal) {
                    closeModal();
                }
            });

            // Re-attach listeners to dynamically created Buy buttons after results are rendered
